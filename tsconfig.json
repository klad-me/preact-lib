{
	"compilerOptions": {
		"strict": true,
		"baseUrl": "./",
		"rootDir": "./",
		"paths": {
			"@preact-lib/*": [
				"src/*"
			]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCaseOnly"
				}
			}
		],
		"downlevelIteration": true,
		"importHelpers": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	}
}
