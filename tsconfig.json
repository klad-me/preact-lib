{
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": "./",
		"paths": {
			"@preact-lib/*": [
				"src/*"
			]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCaseOnly"
				}
			}
		]
	},
}
