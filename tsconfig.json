{
	"compilerOptions": {
		"strict": true,
		"noEmit": true,
		"baseUrl": "./",
		"rootDir": "./",
		"paths": {
			"@preact-lib/*": [
				"src/*"
			]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "camelCaseOnly"
				}
			}
		],
		"downlevelIteration": true,
		"importHelpers": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"typedocOptions": {
		"entryPoints": [ "src/hooks/index.ts", "src/tr/index.tsx", "src/types/index.ts", "src/ui/index.ts", "src/utils/index.ts" ],
		"out": "docs",
		"sort": "source-order"
	}
}
